<html>
    <head>
        <title>
             post details
        </title>
    </head>
    <style>
        .button1
    {
        padding-top: 3%;
        
        
    }
          .ba
      {
        display: flex;
        flex-direction: column; 
        padding-left:3%;
        padding-top: 1%;
        height:200px;
        width:100%;
      }
        .main
        {
            display:flex;
            flex-direction:row;
            padding-top: 2%;
            padding-bottom: 2%;
            background: linear-gradient(150deg, rgb(213, 238, 240), #73b9b9),rgb(88, 197, 199);
            
        }
        .a{
            width:15%;
            height: 100%;
            background: linear-gradient(150deg, rgb(213, 238, 240), #73b9b9),rgb(88, 197, 199);
            
        }
        .b
        {
            padding-left:5%;
            padding-right:5%;
            padding-top:5%;
            width:65%;
            height:85%;
            
        }
        .c
        {
            width:20%;
            height:100%;
            background: linear-gradient(150deg, rgb(213, 238, 240), #73b9b9),rgb(88, 197, 199);
        }
        .bc
      {
        /* display:flex;
        flex-direction: column;
        justify-content: space-between; */
        overflow-y: auto;
        height:350px;
        width:100%;
        background-color:brown;
        padding: 7px;
        padding-top:5%;
        padding-left:2%;
        padding-right:2%;
      }
      .profile
      {
        padding-top: 1%;
      }
      .inside1
      {
        padding-top: 1%;
        padding-bottom: 2%;
        padding-left:2%;
        display:flex;
        flex-direction:row;
      }
      .inside2
      {
        padding-right:3%
      }
      .button{
         display:flex;
         flex-direction: row;
         
      }
      .button2
      {
        padding-left:75%;
      }
      .data1
      {
        display:flex;
        flex-direction: row;
      }
      .img
      {
        padding-left:4%;
      }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <body class="main">
        <div class="a">
            <div class="img">
            <img src="./pic/Twitter-Symbol.png"
            class="rounded-circle img-fluid"  style="width: 75px" style="height:30cm" alt="./pic/home.jpg">
            </div>
            <div>
                Twitter-Clone
            </div>
        </div>
    <div class="b card rounded-3">
        <form action="/list" method="post">
        <div class="ba card rounded-4">
               <div class="inside1">
                <div class="profile">
                    <img src="./pic/vv.jpg"
                    class="rounded-circle img-fluid"  style="width: 40px" style="height:10cm" alt="./pic/list.jpg">
                    User@ <%=name%>
                    
                </div>
                </div>
                <div class="inside2">
                <div>
                    <input type="text" id="form1" name="text1" class="form-control" size="62%" style="height: 90;"  autocomplete="off" placeholder="Enter a task" required>
                </div>
                <div class="button">
                <div class="button1">
                    <button type="submit" class="rounded-3 btn btn-secondary ms-1">tweet</button> 
                </div>
            </form>
                
                </div>
                </div>

                
        </div>
      
        <div class="bc card rounded-3">
            <table class="table mb-4">
                <thead>
                  <tr>
                    <th class="ab" scope="row">Recent Tweets</th>
                  </tr>
                </thead>
               <tbody>
                  <%data.forEach(function(data){%>
                      <tr>
                          <td>
                            <div class="data1">
                            <div>
                                <img src="./pic/vv.jpg"
                                class="rounded-circle img-fluid"  style="width: 20px" style="height:7.5cm" alt="./pic/list.jpg">
                              </div> 
                              <div class="name">
                                    @<%=data.name%>
                               </div>
                            </div>

                            <div class="data">

                               
                                <div><%=data.data%></div>
                                <div><%=data.time%></div>
                            </div>
                            <div class="button">
                            <form action="/submit" method="post">
                            <div>
                                <button type="submit" name="submit" value=<%=data._id%> onChange="this.form.submit">Update</button>
                            </div>
                            </form>
                            <form action="/delete" method="post">
                            <div>
                                <button type="submit" name="delete" value=<%=data._id%> onChange="this.form.submit">Delete</button>
                            </div>
                            </form>
                            </div>
                            </td>
                      </tr>

                 <% })%>
                  <tr>

                  </tr>
               </tbody>
              </table>
        </div>
    </div>
    <div class="c">
        <div class="button2">
            <a href="/list" class="button"><button type="text" class="rounded-3 btn btn-secondary ms-1">Back</button> </a>
        </div>
    </div>

    </div>
    </body>
</html>